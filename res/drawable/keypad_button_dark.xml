<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="false">
        <shape>
            <solid android:color="#3c3c3c"/>
            <stroke
                android:width="2dp"
                android:color="#7222" />    
        </shape>
    </item>
    
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#33B5E5"/>
            <stroke
                android:width="2dp"
                android:color="#7222" />    
        </shape>
    </item>

    <item android:state_focused="true">
        <shape>
            <solid android:color="#b4d5f0"/>
            <stroke
                android:width="2dp"
                android:color="#7222" />
        </shape>
    </item>
    
    <item android:state_selected="true">
        <shape>
            <solid android:color="#0099CC"/>
            <stroke
                android:width="2dp"
                android:color="#7222" />
        </shape>
    </item>
    
    <item>        
        <shape>
            <!-- solid android:color="#A9A9A9"/-->
            <solid android:color="#555555"/>
            <stroke
                android:width="2dp"
                android:color="#7222" />
        </shape>
    </item>
</selector>
